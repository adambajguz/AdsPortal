{
  "Application": {
    "Name": "AdsPortal.WebPortal"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "AdsPortal": "Information",
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Serilog.AspNetCore.RequestLoggingMiddleware": "Warning"
      }
    },
    "WriteTo": {
      "ConsoleSink": {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj} <s:{SourceContext} t:{ThreadId} rid:{RequestId} rp:{RequestPath}>{NewLine}{Exception}"
        }
      },
      "FileSink": {
        "Name": "File",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} <s:{SourceContext} pid:{ProcessId} t:{ThreadId} rid:{RequestId} rp:{RequestPath}>{NewLine}{Exception}",
          "rollingInterval": "Day",
          "path": "/logs/log_.log",
          "retainedFileCountLimit": 64,
          "fileSizeLimitBytes": 10485760
        }
      }
    }
  },
  "RelationalDb": {
    "ConnectionString": "Server=tcp:sqlserver2016r2.database.windows.net,1433;Initial Catalog=AdsPortal;Persist Security Info=False;User ID=admin;Password=test1234@;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "MongoDb": {
    "DatabaseName": "AdsPortal",
    "ConnectionString": "mongodb://localhost:27017"
  },
  "PasswordHasher": {
