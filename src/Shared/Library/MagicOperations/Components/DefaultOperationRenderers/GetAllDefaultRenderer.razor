@using System.Collections
@using Components.OperationRenderers

@inherits GetAllOperationRenderer

<h3>GetAllDefaultRenderer</h3>

@if (Errors is not null)
{
    <p>@Errors.ToString()</p>
}
else if (List is IEnumerable enumerableList)
{
    <table>
        <thead>
            <tr>
                <th>Param</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in enumerableList)
            {
                <tr>
                    <td>Base API path</td>
                    <td>
                        @System.Text.Json.JsonSerializer.Serialize(item)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    @System.Text.Json.JsonSerializer.Serialize(List)

    <p>List does not implement IEnumerable</p>
}